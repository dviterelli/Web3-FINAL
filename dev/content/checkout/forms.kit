<section id="forms">
    <div>
        <div id="quick">
            <h2>Quick Checkout</h2>
            <img src="img/checkout/applepay.svg" alt="Applepay">
            <img src="img/checkout/paypal.svg" alt="Paypal">
            <img src="img/checkout/shoppay.svg" alt="Shop Pay">
            <img src="img/checkout/klarna.svg" alt="Klarna">
        </div>
        
        <div id="payment">
            <section id="card-info">
                <h2>Payment</h2>
                <form action="#">
                    <input type="name" placeholder="Name">     
                    <input type="email" placeholder="Email Address"> 
                    <input type="number" placeholder="Card No."> 
                    <input type="month" placeholder="Expiration Month"> 
                    <input type="number" placeholder="Expiration Year">  
                    <input type="number" placeholder="Security Code"> 
                </form> 
            </section>
            
            <section id="shipping">
                <h2>Shipping</h2>
                <form action="#">
                    <input type="name" placeholder="Name">  
                    <input type="address" placeholder="Shipping Address Line 1"> 
                    <input type="address" placeholder="Line 2">
                    <input type="checkbox" placeholder="State / Province">  
                    <input type="checkbox" placeholder="Country">  
                    <input type="number" placeholder="Zip / Postal Code"> 
                </form>
            </section>
            <button>Continue</button>
        </div>
    </div>
</section>