<div>
    <h3>Quick Checkout</h3>
    <img src="img/checkout/applepay.svg" alt="Applepay">
    <img src="img/checkout/paypal.svg" alt="Paypal">
    <img src="img/checkout/shoppay.svg" alt="Shop Pay">
    <img src="img/checkout/klarna.svg" alt="Klarna">
</div>

<div>
    <section id="payment">
        <form action="#">
            <input type="name" placeholder="Name"> </form> 
        <form action="#">
                <input type="email" placeholder="Email Address"> </form>
        <form action="#">
            <input type="card #" placeholder="Card No."> </form> 
        <form action="#">
            <input type="exp month" placeholder="Expiration Month"> </form> 
        <form action="#">
            <input type="exp year" placeholder="Expiration Year"> </form> 
        <form action="#">
            <input type="sec code" placeholder="Security Code"> </form> 
    </section>
    
    <section id="shipping">
        <form action="#">
            <input type="name" placeholder="Name"> </form> 
        <form action="#">
                <input type="address" placeholder="Shipping Address Line 1"> </form>
        <form action="#">
            <input type="address" placeholder="Line 2"> </form> 
        <form action="#">
            <input type="state" placeholder="State / Province"> </form> 
        <form action="#">
            <input type="country" placeholder="Country"> </form> 
        <form action="#">
            <input type="zip code" placeholder="Zip / Postal Code"> </form>
    </section>
    <button>Continue</button>
</div>
